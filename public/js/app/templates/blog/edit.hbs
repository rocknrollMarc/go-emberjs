<form {{bind-attr class=":form-horizontal controllers.blog.editMode:show:hidden"}}>
  <div class="form-group">
      {{input class="form-control" placeholder='title' value=model.title}}
  </div>
  <div class="form-group">
      {{textarea class="form-control" placeholder='body' value=model.body}}
  </div>
  <div class="form-group">
    <button class="btn btn-primary" {{action "save"}} title="save"> save </button>
    <button class="btn btn-default" {{action "cancel"}} title="cancel"> cancel</button>
  </div>
</form>
