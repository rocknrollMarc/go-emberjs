{{#view App.DraggableView}}

    {{! again here use the editMode property to switch class names between "shown" and "hidden" }}
    <div {{bindAttr class=":thing-edit :pane controllers.thing.editMode:shown:hidden"}}>
        <div class="tools">
            <button class="glyphicon glyphicon-arrow-left blue fleft btn-mobile" {{action "closeThingWithTransition" target="view"}}></button>
        </div>
        
        <div class="line">
            <h3>Edit thing</h3>
        </div>
        <div class="line">
            <label for="avatarUrl">Choose thing avatar</label>
            {{input value=avatarUrl}}
        </div>
        <div class="line">
            <label for="name">Thing name</label>
            {{input value=name}}
        </div>
        <div class="line">
            <label for="email">Thing email</label>
            {{input value=email}}
        </div>
        <div class="line">
            <label for="bio">Thing short bio</label>
            {{textarea value=bio}}
        </div>
        <div class="aright">
            <button class="blue btn-desktop" {{action "save"}} title="save"> ok </button>
            <button class="blue btn-mobile" {{action "saveWithTransition" target="view"}} title="save"> ok </button>
        </div>
    </div>

{{/view}}
