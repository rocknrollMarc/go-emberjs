{{! the DraggableView behaviors are enabled in the mobile version }}
{{#view App.DraggableView}}

    <div {{bind-attr class=":panel :panel-default controllers.blog.editMode:hidden:show"}}>
        <div class="panel-heading">
          <h3 class='panel-title'>{{title}}</h3>
        </div>
        <div class='panel-body'>
          {{confirm-box action="confirmDelete" param=blog isVisible=deleteMode}}
          <p>{{body}}</p>
        </div>
        <div class='panel-footer'>
          <button {{bind-attr class=":btn :btn-default :glyphicon :glyphicon-trash deleteMode:active"}} {{action "delete"}} title="delete"></button>
          {{#link-to 'blog.edit' }}<button {{bind-attr class=":btn :btn-default :glyphicon :glyphicon-pencil editMode:active"}} title="edit"></button>{{/link-to}}
        </div>
    </div>
{{/view}}

{{outlet}}
